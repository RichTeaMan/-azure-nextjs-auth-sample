{
  "include": [
    "lib",
    "extensions"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/stories",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "lib": [
      "dom",
      "es2020"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "@azure/*": [
        "./lib/*/src"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  }
}
